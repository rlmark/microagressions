<%= form_for @post do |f| %>
  <%= f.label :title, "Dear", class: 'display' %><br>
  <%= f.text_field :title, class: "form-control" %>
  <br>
  <%= f.label :content, "I want you to know", class: 'display'%><br>
  <%= f.text_area :content, class: "form-control" %>
  <br>
  <%= f.submit "Say it!", class: "btn btn-default" %>

<% end %>
